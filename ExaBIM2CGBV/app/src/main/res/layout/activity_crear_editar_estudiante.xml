<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearEditarEstudiante">

    <EditText
        android:id="@+id/et_estudiante_costo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="1.2"
        app:layout_constraintEnd_toEndOf="@+id/et_estudiante_direccion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_estudiante_direccion"
        app:layout_constraintTop_toBottomOf="@+id/et_estudiante_direccion" />

    <EditText
        android:id="@+id/et_estudiante_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:enabled="false"
        android:inputType="textPersonName"
        android:text="id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_estudiante_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Direccion"
        app:layout_constraintEnd_toEndOf="@+id/et_estudiante_fecha"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_estudiante_fecha"
        app:layout_constraintTop_toBottomOf="@+id/et_estudiante_fecha" />

    <EditText
        android:id="@+id/et_estudiante_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="04/12/2000"
        app:layout_constraintEnd_toEndOf="@+id/et_estudiante_apellido"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_estudiante_apellido"
        app:layout_constraintTop_toBottomOf="@+id/et_estudiante_apellido" />

    <EditText
        android:id="@+id/et_estudiante_apellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Apellido"
        app:layout_constraintEnd_toEndOf="@+id/et_estudiante_nombre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_estudiante_nombre"
        app:layout_constraintTop_toBottomOf="@+id/et_estudiante_nombre" />

    <EditText
        android:id="@+id/et_estudiante_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nombre"
        app:layout_constraintEnd_toEndOf="@+id/et_estudiante_id"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_estudiante_id"
        app:layout_constraintTop_toBottomOf="@+id/et_estudiante_id" />

    <Button
        android:id="@+id/btn_estudiante_guardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Guardar Estudiante"
        app:layout_constraintEnd_toEndOf="@+id/cb_estudiante_beca"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/cb_estudiante_beca"
        app:layout_constraintTop_toBottomOf="@+id/cb_estudiante_beca" />

    <CheckBox
        android:id="@+id/cb_estudiante_beca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Beca"
        app:layout_constraintEnd_toEndOf="@+id/et_estudiante_costo"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/et_estudiante_costo"
        app:layout_constraintTop_toBottomOf="@+id/et_estudiante_costo" />
</androidx.constraintlayout.widget.ConstraintLayout>