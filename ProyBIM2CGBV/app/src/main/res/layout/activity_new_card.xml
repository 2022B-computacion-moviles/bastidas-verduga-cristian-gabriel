<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCardActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/title_new_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:hint="@string/new_card_title_hint"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconContentDescription="@string/new_card_icon_description">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_title_new_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/content_new_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:hint="@string/new_card_content_hint"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:layout_constraintEnd_toEndOf="@+id/title_new_card"
        app:layout_constraintStart_toStartOf="@+id/title_new_card"
        app:layout_constraintTop_toBottomOf="@+id/title_new_card"
        app:startIconContentDescription="@string/new_card_icon_description">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_content_new_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine" />
    </com.google.android.material.textfield.TextInputLayout>

</androidx.constraintlayout.widget.ConstraintLayout>