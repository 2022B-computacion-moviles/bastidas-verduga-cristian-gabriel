<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewCollectionActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_new_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:hint="@string/collection_name"
        app:endIconMode="clear_text"
        app:errorEnabled="true"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconContentDescription="@string/new_card_icon_description">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name_new_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>